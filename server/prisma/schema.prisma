generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Orphanage {
  id             String           @id @default(cuid())
  name           String
  about          String
  latitude       Float
  longitude      Float
  instructions   String
  openingHours   String           @map("opening_hours")
  openOnWeekends Boolean          @default(false) @map("open_on_weekends")
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")
  photos         OrphanagePhoto[]

  @@map("orphanages")
}

model OrphanagePhoto {
  id          String    @id @default(cuid())
  path        String
  orphanageId String    @map("orphanage_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  orphanage   Orphanage @relation(fields: [orphanageId], references: [id], onDelete: Cascade)

  @@map("orphanage_photos")
}
