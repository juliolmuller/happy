{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "build/",

    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "strict": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/"
  ]
}
