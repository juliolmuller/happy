{
  "name": "happy-server",
  "version": "1.0.4",
  "private": true,
  "license": "MIT",
  "scripts": {
    "typeorm": "ts-node-dev node_modules/typeorm/cli.js",
    "migrate": "npm run typeorm -- migrations:run",
    "migrate:fresh": "npm run typeorm -- schema:drop && npm run migrate",
    "start": "ts-node-dev src/index.ts --transpile-only --ignore node_modules",
    "build": "rm -rf build/ && tsc -p ."
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.1.4",
    "multer": "^1.4.2",
    "sqlite3": "^5.0.0",
    "typeorm": "~0.2.29",
    "yup": "~0.29.3"
  },
  "devDependencies": {
    "@lacussoft/eslint-config-standard": "^1.0.9",
    "@types/cors": "^2.8.8",
    "@types/dotenv-flow": "^3.1.0",
    "@types/express": "^4.17.8",
    "@types/multer": "^1.4.4",
    "@types/yup": "^0.29.9",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  }
}
