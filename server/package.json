{
  "name": "happy-server",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node-dev src/index.ts --transpile-only --ignore node_modules",
    "development": "npm run dev",
    "typeorm": "ts-node-dev node_modules/typeorm/cli.js",
    "migrations": "npm run typeorm -- migrations:run",
    "migrations:fresh": "npm run typeorm -- schema:drop && npm run migrations"
  },
  "dependencies": {
    "express": "^4.17.1",
    "sqlite3": "^5.0.0",
    "typeorm": "^0.2.28"
  },
  "devDependencies": {
    "@lacussoft/eslint-config-standard": "^1.0.8",
    "@types/express": "^4.17.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  }
}
